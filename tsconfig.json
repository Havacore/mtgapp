{ 
  "filesGlob": [
    "src/static/app/**/*.ts"
  ],
  "compilerOptions": {
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "module": "system",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ],
  "filesGlob": [
    "typings/browser.d.ts",
    "client/**/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "typings/browser.d.ts",
    "src/static/app/app.ts",
    "src/static/app/main.ts"
  ]
}